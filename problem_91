#include <stdio.h>
#include <string.h>

int main() {
    char a[100], b[100], sum[101];
    int i, j, k, carry = 0;
    printf("Enter first binary string: ");
    scanf("%s", a);

    printf("Enter second binary string: ");
    scanf("%s", b);

    int len1 = strlen(a);
    int len2 = strlen(b);
    i = len1 - 1;
    j = len2 - 1;
    k = 0;
    while(i >= 0 || j >= 0 || carry) {
        int bit1 = (i >= 0) ? a[i] - '0' : 0;
        int bit2 = (j >= 0) ? b[j] - '0' : 0;

        int s = bit1 + bit2 + carry;
        sum[k++] = (s % 2) + '0';
        carry = s / 2;

        i--;
        j--;
    }

    sum[k] = '\0';
    for(i = 0, j = k - 1; i < j; i++, j--) {
        char temp = sum[i];
        sum[i] = sum[j];
        sum[j] = temp;
    }

    printf("Sum of binary strings: %s\n", sum);

    return 0;
}
